			while (n) {
				n /= 7;
				i++;                         
			}
		}
		else {                                               //n равен нулю
			i = 1;
		}
		fout << i << " цифр в представлении числа N в 7-ричной системе счисления" << endl;       
		fout.close();
	}
	return 0;
}
