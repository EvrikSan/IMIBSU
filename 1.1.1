#include <iostream>
#include <math.h>

using namespace std;

int main() {
	setlocale(LC_ALL, "Russian");
	int a, b, c, S;                       //стороны треугольника a,b - катеты; с - гипотенуза; S - площадь
	cin >> a >> c;
	b = sqrt(c * c - a * a);              //нахождение второго катета
	S = a * b / 2;                        //нахождение площади треугольника
	cout << "Длина второго катета = " << b << endl;           //ответ на первый вопрос
	cout << "Площадь треугольника = " << S << endl;           //ответ на второй вопрос
	return 0;                      //завершение программы
}
