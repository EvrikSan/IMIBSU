#include <iostream>

using namespace std;

int main() {
	setlocale(LC_ALL, "Russian");
	double x, s = 0, f = 1, q = 3;            //s - сумма, f - факториал, q - степень тройки
	cin >> x;
	if (x == 3) {
		cout << "Невозможно вычислить" << endl;
	}
	else {
		s = f / q + x;
		for (int i = 2; i <= 5; i++) {
			q *= 3;                         //степень тройки
			f *= i;                         //факториал
			s = f / (q + s);                //пересчет суммы
		}
		cout << s;
	}
	return 0;                            //завершение программы
}
